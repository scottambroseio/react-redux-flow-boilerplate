{
    "root": true,
    "env": {
        "jest/globals": true
    },
    "extends": [
        "airbnb",
        "plugin:jest/recommended",
        "plugin:flowtype/recommended",
        "prettier"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "jest",
        "flowtype"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": "off",
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}
